    <script>
        window.addEventListener('scroll', function () {
            const navbar = document.querySelector('.navbar');
            const redBar = document.querySelector('.red-bar');
            const subNavbar = document.querySelector('.sub-navbar');

            if (window.scrollY > 60) {
                navbar.style.top = '0';  // Sabit bar üstte
                redBar.style.top = '0';  // Kırmızı bar yukarıya çekildi
                subNavbar.style.top = '70px';  // Alt navbar da yukarıya çekildi
            } else {
                navbar.style.top = '0';  // Başlangıçta sabit konum
                redBar.style.top = '0';
                subNavbar.style.top = '0';  // Alt navbar sabit konumda
            }
        });
    </script>




