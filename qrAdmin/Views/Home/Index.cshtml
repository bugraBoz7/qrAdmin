@{
    Layout = null;
}
@model qrAdmin.Models.IndexViewModel  // ************************************************************


<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bölüm Menü</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bangers&display=swap" rel="stylesheet">

    <style>
          /* Genel Sayfa Stilleri */
          body {
              font-family: Arial, sans-serif;
              margin: 0;
              padding: 0;
              box-sizing: border-box;
          }

          /* Üst Menü Barı (Firma Bilgileri) */
          .navbar {
              font-family: 'Courier New', Courier, monospace;
              background-color: #333;
              font-size: x-large;
              color: white;
              padding: 10px 20px;
              position: fixed;
              top: 0;
              width: 100%;
              z-index: 100;
              display: flex;
              justify-content: space-between;
              align-items: center;
              transition: top 0.3s ease; /* Scroll ile aşağı inince hareketi yumuşatır */
          }

              .navbar .firma {
                  display: flex;
                  align-items: center;
              }

                  .navbar .firma img {
                      height: 50px;
                      margin-right: 10px;
                  }

              .navbar h2 {
                  margin: 0;
                  color: white;
              }

          /* Yeni Kırmızı Bar */
          .red-bar {
              background-color: #c0392b;
              height: 400px;
              position: fixed;
              top: 60px;
              width: 100%;
              z-index: -10;
              display: flex;
              justify-content: center;
              align-items: center;
              transition: top 0.3s ease;
          }

              .red-bar img {
                  width: 180px;
                  height: 180px;
                  object-fit: cover;
                  border-radius: 10px;
                  margin-top: 20px;
              }

          /* Alt Menü Barı (Bölümler için) */
          .sub-navbar {
              background-color: #444;
              color: white;
              padding: 30px;
              position: fixed;
              top: 0px;
              width: 100%;
              z-index: 100;
              overflow-x: auto;
              white-space: nowrap;
              transition: top 0.3s ease; /* Scroll ile birlikte hareketi yumuşatır */
          }

              .sub-navbar ul {
                  list-style: none;
                  margin: 0;
                  padding: 0;
                  display: inline-block;
              }

                  .sub-navbar ul li {
                      display: inline-block;
                      margin-left: 20px;
                  }

                      .sub-navbar ul li a {
                          color: white;
                          text-decoration: none;
                          padding: 8px 12px;
                      }

                          .sub-navbar ul li a:hover {
                              background-color: #575757;
                              border-radius: 4px;
                          }

          /* İçerik Bölümü */
          .content {
              margin-top: 350px;
              padding: 25px;
          }

          /* Menü Bölümleri */
          .menu-section {
              scroll-margin-top: 170px;
              margin-bottom: 50px;
              padding: 20px;
              border-radius: 10px;
              background-color: rgb(255, 255, 255);
              box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
          }

              .menu-section h2 {
                  font-family: 'Courier New', Courier, monospace;
                  font-size: 24px;
                  text-align: center;
                  margin-bottom: 20px;
                  padding-bottom: 10px;
              }

          /* Ürün Kutuları */
          .product-grid {
              display: flex;
              gap: 20px;
              flex-wrap: wrap;
              justify-content: center;
          }

          .product-card {

              border: none;
              text-align: center;
              flex-grow: 1;
              position: relative;
              padding: 20px;
              background-color: #ffffff;
              border-radius: 10px;
              cursor: pointer;
          }

              .product-card img {
                  width: 100%;
                  height: 200px;
                  object-fit: cover;
                  border-radius: 20px;
              }

              .product-card p {


                  color: #444;
                  margin: 10px 0;
              }

              .product-name {
                  font-family: "Bangers", serif !important;
                  font-weight: 400;
                  font-style: normal;
                  font-size: 18px;
                  color: red; /* Renk hatası vardı, düzeltilmiş */
                  margin: 10px 0;
              }

          .product-card .price {
           color: green;

           font-weight: bold;
        }

          /* Kullanıcı Girişi Stilleri */
          .login-container {
              text-align: center;
              margin-top: 20px;
          }

              .login-container input {
                  margin: 5px;
                  padding: 10px;
                  width: 200px;
              }

              .login-container button {
                  padding: 10px;
              }

          footer {
              font-family: Arial, sans-serif;
              color: #333;
              font-size: 14px;
          }
    </style>
</head>
