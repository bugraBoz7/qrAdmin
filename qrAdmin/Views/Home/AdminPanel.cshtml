@model List<qrAdmin.Models.Urun>

<h2>Admin Panel</h2>

<table>
    <thead>
        <tr>
            <th>Ürün Adı</th>
            <th>Mevcut Fiyat</th>
            <th>Yeni Fiyat</th>
            <th>Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var urun in Model)
        {
            <tr>
                <td>@urun.Ad</td>
                <td>@urun.Fiyat ₺</td>
                <td>
                    <form method="post" action="@Url.Action("FiyatGuncelle", "Home")">
                        <input type="hidden" name="id" value="@urun.Id" />
                        <input type="number" name="fiyat" required />
                        <button type="submit">Güncelle</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

